<h2 class="heading">Exporting <%= @export.machine.name %>...</h2>

<div id="export_status"><%= render 'progress' %></div>

<%= javascript_tag("update_progress_bar('export_status', '#{vm_export_progress_path}');") unless @export.completed? %>

<% unless @export.completed? %>
  <div id="no_background_process">
    If the export remains at 0% for a minute or more,
    it's possible that the background server isn't
    running. Run <strong>script/delayed_job start</strong>
    to start it.
  </div>
<% end %>

<div id="return_to_exports"><%= link_to 'Return to Exports', vm_exports_path %></div>
