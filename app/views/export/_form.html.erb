<p>
  Here you are able to export this Virtual Machine into
  a format other VirtualBox users are able to import.
</p>

<%= form_tag(vm_new_export_path, :method => :post) do %>

  <fieldset class="data_box">
    <legend class="heading">Export Settings (required)</legend>
    <div class="data">
      <div class="label">Filename:</div>
      <div class="value"><%= text_field_tag('export[filename]', '', :size => 55) %>.ovf</div>
      <div class="break"></div>
    </div>
  </fieldset>

  <fieldset class="data_box">
    <legend class="heading">Additional Settings (optional)</legend>
    <div class="data">
      <div class="label">Description:</div>
      <div class="value"><%= text_area_tag('export[description]', '', :rows => 6, :cols => 40)  %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Product Name:</div>
      <div class="value"><%= text_field_tag('export[product]', '', :size => 55) %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Product URL:</div>
      <div class="value"><%= text_field_tag('export[product_url]', '', :size => 55) %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Vendor Name:</div>
      <div class="value"><%= text_field_tag('export[vendor]', '', :size => 55) %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Vendor URL:</div>
      <div class="value"><%= text_field_tag('export[vendor_url]', '', :size => 55) %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Version:</div>
      <div class="value"><%= text_field_tag('export[version]', '', :size => 55) %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">EULA:</div>
      <div class="value"><%= text_area_tag('export[license]', '', :rows => 6, :cols => 40) %></div>
      <div class="break"></div>
    </div>
  </fieldset>

  <%= submit_tag 'Export Virtual Machine' %>

<% end %>
