<% hidden ||= false %>
<div id="display" class="data_box" <%=raw 'style="display:none;"' if hidden %>>
  <div class="heading">Video</div>
  <div class="data">
    <div class="label">Video Memory:</div>
    <div class="value"><%= number_with_delimiter(@vm.vram_size) %> MB</div>
    <div class="break"></div>
  </div>
  <div class="data">
    <div class="label">3D Acceleration:</div>
    <div class="value"><%= formatted_state_from(@vm.accelerate_3d_enabled) %></div>
    <div class="break"></div>
  </div>
  <div class="data">
    <div class="label">2D Video Acceleration:</div>
    <div class="value"><%= formatted_state_from(@vm.accelerate_2d_video_enabled) %></div>
    <div class="break"></div>
  </div>

  <div class="heading">Remote Display</div>
  <% if @vm.vrdp_server.enabled %>
    <div class="data">
      <div class="label">Server Port:</div>
      <div class="value"><%= @vm.vrdp_server.ports %></div>
      <div class="break"></div>
    </div>
    <% unless @vm.vrdp_server.net_address.blank? %>
      <div class="data">
        <div class="label">Net Address:</div>
        <div class="value"><%= @vm.vrdp_server.net_address %></div>
        <div class="break"></div>
      </div>
    <% end %>
    <div class="data">
      <div class="label">Authentication Type:</div>
      <div class="value"><%= I18n.t("vm.auth_types.#{@vm.vrdp_server.auth_type}") %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Authentication Timeout:</div>
      <div class="value"><%= @vm.vrdp_server.auth_timeout %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Allow Multiple Connections:</div>
      <div class="value"><%= formatted_state_from(@vm.vrdp_server.allow_multi_connection) %></div>
      <div class="break"></div>
    </div>
    <div class="data">
      <div class="label">Reuse Single Connections:</div>
      <div class="value"><%= formatted_state_from(@vm.vrdp_server.reuse_single_connection) %></div>
      <div class="break"></div>
    </div>
  <% else %>
    <div class="data">Disabled</div>
  <% end %>
</div>
