<div id="usb" class="data_box">
  <div class="heading"><a name="usb">USB</a></div>

  <div class="subheading">USB Controllers</div>
  <% if @vm.usb_controller.enabled %>
    <% if @vm.usb_controller.device_filters.size > 0 %>
      <% @vm.usb_controller.device_filters.each_with_index do |device_filter, index| %>
        <div class="data">
          <div class="label">
            Device <%= index + 1 %>:
            <%= device_filter.active ? "(active)" : "(inactive)" %>
          </div>
          <div class="value"><%= device_filter.name %></div>
          <div class="break"></div>
        </div>
      <% end %>
    <% else %>
      <div class="data">
        <div class="label">None</div>
        <div class="break"></div>
      </div>
    <% end %>
  <% else %>
    <div class="data">
      <div class="label">Disabled</div>
      <div class="break"></div>
    </div>
  <% end %>
</div>
