<div id="storage" class="data_box">
  <div class="heading"><a name="storage">Storage</a></div>

  <% @vm.storage_controllers.each do |storage_controller| %>
    <div class="subheading"><%= storage_controller.name %> (<%= storage_controller.controller_type.to_s.upcase %>)</div>
    <% storage_controller.medium_attachments.each_with_index do |medium_attachment, index| %>
      <div class="data">
        <div class="label"><%= storage_controller.name %> <%= index + 1 %>:</div>
        <div class="value"><%= formatted_display_of_drive(medium_attachment) %></div>
        <div class="break"></div>
      </div>
    <% end %>
  <% end %>
</div>
